doctype 5
html
    head
        h1 = title
        script(src='/javascripts/jquery/jquery.min.js')
        script(src='/javascripts/jquery-validate/jquery-validate.min.js')
        script(src='/javascripts/bootstrap/js/bootstrap.min.js')
        script(src='./javascripts/jquery-ui/js/jquery-ui-1.10.0.custom.min.js')
        link(rel='stylesheet', type='text/css', href='/javascripts/bootstrap/css/bootstrap.min.css')
        link(rel='stylesheet', type='text/css', href='/javascripts/jquery-ui/css/ui-lightness/jquery-ui-1.10.0.custom.min.css')
        script(src='/javascripts/registerJQ.js')
    body
        p Registration Page
        div
            form(action="/register", method="post")
                div.control-group.input-append
                    input(type="text", name="username", id="username", data-required)
                    label.add-on(for="username") Username
                div.control-group.input-append
                    input(type="password", name="password", id="password", data-required)
                    label.add-on(for="password") Password
                div.control-group.input-append
                    input(type="text", name="firstName", id="firstName", data-required)
                    label.add-on(for="firstName") First Name
                div.control-group.input-append
                    input(type="text", name="lastName", id="lastName", data-required)
                    label.add-on(for="lastName") Last Name
                div.control-group.input-append
                    input(type="text", name="email" , id="email", data-required)
                    label.add-on(for="email") Email
                div.control-group.input-append
                    input(type="text", name="birthday" , id="birthday", data-required)
                    label.add-on(for="birthday") Birthday
                div.control-group.input-append
                    input(type="text", name="country", id="country", data-required)
                    label.add-on(for="country") Country
                div.control-group.input-append
                    input(type="text", name="city" , id="city", data-required)
                    label.add-on(for="city") City

                button(type="submit") Register

        block content
